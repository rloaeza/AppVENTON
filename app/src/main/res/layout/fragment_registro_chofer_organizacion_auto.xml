<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".chofer.RegistroChoferOrganizacionAuto"
    android:background="@drawable/backgroundregistrochofer2"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edit_text_cantidad_pasajeros"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBotones"
                    android:ems="10"
                    android:hint="@string/txtNPasajeros"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:maxLength="1"
                    android:textColor="@color/colorBotones"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@color/colorBotones"
                    android:textColorLink="@android:color/background_light"

                    tools:targetApi="o" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edit_text_vigencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBotones"
                    android:ems="10"
                    android:hint="@string/txtVigencia"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textColor="@color/colorBotones"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@color/colorBotones"

                    android:textColorLink="@android:color/background_light"
                    tools:targetApi="o" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edit_text_placas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBotones"
                    android:ems="10"
                    android:hint="@string/txtPlacas"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/colorBotones"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@color/colorBotones"
                    android:textColorLink="@android:color/background_light"

                    tools:targetApi="o" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_organizacion"
                    style="@android:style/Widget.Material.Light.Spinner.Underlined"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBotones"
                    android:padding="0dp"
                    android:popupBackground="@drawable/shape_background_spiner"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/spinner_item_values" />

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_selecGen"
                    style="@android:style/Widget.Material.Light.Spinner.Underlined"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBotones"
                    android:padding="0dp"
                    android:popupBackground="@drawable/shape_background_spiner"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/spinner_item_values"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:weightSum="1">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_subir_foto_chofer"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/colorBackBotones2"
                    app:cardUseCompatPadding="true">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/txtFotoPerfilUsuario"
                            android:textColor="@color/colorBotones"
                            android:textSize="14sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_registrar"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/colorBackBotones2"
                    app:cardUseCompatPadding="true">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/txtCrearCuenta"
                            android:textColor="@color/colorBotones"
                            android:textSize="14sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>
            </TableRow>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>