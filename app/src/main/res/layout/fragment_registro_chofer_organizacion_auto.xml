<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".chofer.registroChofer_organizacion_auto"
    android:background="@drawable/backgroundregistrochofer2"
    android:padding="8dp"
    >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/edit_text_cantidad_pasajeros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:backgroundTint="@color/colorBotones"
                android:maxLength="1"
                android:ems="10"
                android:textAlignment="center"
                android:hint="@string/txtNPasajeros"
                android:importantForAutofill="no"
                android:inputType="date"
                android:textColor="@color/colorBotones"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorBotones"
                android:textColorLink="@android:color/background_light"

                tools:targetApi="o" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/edit_text_vigencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBotones"
                android:ems="10"
                android:hint="@string/txtVigencia"
                android:importantForAutofill="no"
                android:inputType="date"
                android:maxLength="4"
                android:textColor="@color/colorBotones"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorBotones"

                android:textColorLink="@android:color/background_light"
                tools:targetApi="o" />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/edit_text_placas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBotones"
                android:ems="10"
                android:hint="@string/txtPlacas"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:textColor="@color/colorBotones"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorBotones"
                android:textColorLink="@android:color/background_light"

                tools:targetApi="o" />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginBottom="30dp">

            <Spinner
                android:id="@+id/spinner_organizacion"
                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.75"
                android:backgroundTint="@color/colorBotones"
                android:popupBackground="@drawable/shape_background_spiner"
                android:spinnerMode="dropdown"

                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginBottom="30dp">

            <Spinner
                android:id="@+id/spinner_selecGen"
                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:backgroundTint="@color/colorBotones"
                android:focusable="auto"
                android:foregroundTint="@color/colorBotones"
                android:popupBackground="@drawable/shape_background_spiner"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />
        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:weightSum="1">
        <Button
            android:id="@+id/button_subir_foto_chofer"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@color/colorBackBotones"
            android:text="@string/txtFotoPerfilUsuario"
            android:textColor="@color/colorBotones"

            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_registrar"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="0.4"
            android:background="@color/colorBackBotones"
            android:text="@string/txtCrearCuenta"
            android:textColor="@color/colorBotones"

            />
    </TableRow>



</androidx.appcompat.widget.LinearLayoutCompat>