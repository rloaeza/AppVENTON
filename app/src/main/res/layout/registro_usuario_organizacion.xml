<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/japanbackground"
    tools:context=".usuario.registroUsuario_organizacion"
    android:padding="8dp"
    >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:weightSum="1">

            <Spinner
                android:id="@+id/spinner_selecCarrera"
                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.75"
                android:backgroundTint="@color/colorBotones"

                tools:listitem="@layout/spinner_item_values"
                android:padding="0dp"
                android:popupBackground="@drawable/shape_background_spiner"
                android:spinnerMode="dropdown"
               />
        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinner_selecGen"

            style="@android:style/Widget.Material.Light.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:backgroundTint="@color/colorBotones"
            android:padding="0dp"
            tools:listitem="@layout/spinner_item_values"
            android:focusable="auto"
            android:foregroundTint="@color/colorBotones"
            android:popupBackground="@drawable/shape_background_spiner"

            android:spinnerMode="dropdown"
            android:textAlignment="center"
        />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:weightSum="1">
        <Button
            android:id="@+id/button_subir_foto_usuario"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@color/colorBackBotones"
            android:text="@string/txtFotoPerfilUsuario"
            android:textColor="@color/colorBotones"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:weightSum="1"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button_registrar"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@color/colorBackBotones"
            android:text="@string/txtCrearCuenta"
            android:textColor="@color/colorBotones"
            />
    </TableRow>


</androidx.appcompat.widget.LinearLayoutCompat>