<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:background="@drawable/naturebackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconoUsuario"
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/txtDescripcion"
            android:src="@drawable/iconwhite" />

        <EditText
            android:id="@+id/TextUsuario"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/colorBotones"
            android:drawableStart="@drawable/email"
            android:ems="10"
            android:hint="@string/txtUsuario"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/colorBotones"
            android:textColorHint="@color/colorBotones"
            android:textSize="20sp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/TextContrasena"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/colorBotones"
            android:drawableStart="@drawable/lock"
            android:ems="10"
            android:hint="@string/txtContra"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/colorBotones"
            android:textColorHint="@color/colorBotones"
            android:textSize="20sp"
            tools:targetApi="o" />

        <Button
            android:id="@+id/LoguearseBoton"
            android:layout_width="119dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@color/colorBackBotones"
            android:text="@string/txtBotonHola"
            android:textColor="@color/colorBotones" />

    </LinearLayout>

    <TextView
        android:id="@+id/olvidarContra"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:contentDescription="@string/txtDescripcion"
        android:textColor="@color/colorBotones"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:text="@string/txtOlvidasteContrasena" />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="154dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="127dp"
        android:textColor="@color/colorBotones"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/olvidarContra"
        tools:text="@string/txtCrearCuenta" />


</android.support.constraint.ConstraintLayout>